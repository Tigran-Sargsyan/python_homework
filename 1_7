def poww(a,b):
    if b==0:
        if a!=0:
            return 1
        else:
            return "Undefined."
    elif a==0 and b<0:
        return False
    elif a==0 and b>0:
        return 0
    elif b>0:
        return a**b
    else:
        return 1/(a**(-b))

print(poww(2,3))
print(poww(2,-3))
print(poww(0,1))
print(poww(2,0))
print(poww(0,0))
